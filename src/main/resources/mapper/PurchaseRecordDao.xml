<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rush_goods.dao.PurchaseRecordDao">

    <insert id="insertPurchaseRecord" parameterType="purchaseRecord" useGeneratedKeys="true" keyProperty="id" >
        insert into t_purchase_record( user_id,product_id,price,quantity,sum,purchase_date,note)
        values (#{userId},#{productId},#{price},#{quantity},#{sum},now(),#{note})
</insert>

</mapper>